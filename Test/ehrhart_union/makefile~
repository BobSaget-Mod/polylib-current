ROOT  = ../..

EHRHART_UNION =  \
	ue1.in \
	ue2.in

TEST=$(EHRHART_UNION:%.in=%.tested) 

test:
	for x in $(EHRHART_UNION) ; do \
		echo "Verify Ehrhart Union for $$x"; \
		$(ROOT)/bin/$(OBJ_DIR)/verif_ehrhart.exec < $$x ;\
	done ; \

# The default compile rule
.in.tested:
	$(ROOT)/bin/ehrhart.exec < $< > xyz
	diff -w xyz $*.out

# Include the shared compilation rules
include $(ROOT)/vars.mk
include $(ROOT)/default_functions.mk
