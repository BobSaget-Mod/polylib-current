.SUFFIXES: .in .tested. .out

ROOT  = ../..

ZPOLYTESTS =  \
	LatHNF1.in \
	LatHNF2.in \
	LatHNF3.in \
	LatInter1.in \
	LatInter2.in \
	LatInc1.in \
	LatInc2.in \
	ZEmpty1.in \
	ZEmpty2.in \
	ZInter1.in \
	ZInter2.in  \
	ZInter3.in  \
	ZUnion1.in \
	ZUnion2.in \
	ZDiff1.in \
	ZDiff2.in \
	ZImage1.in \
	ZPre1.in \
	ZPre2.in  \
	ZPre3.in \
	ZImPre1.in \
	SplitZpol1.in \
	SplitZpol2.in \
	SplitZpol3.in

TEST=$(ZPOLYTESTS:%.in=%.tested) 

zpoly_tests: $(TEST)

# The default compile rule
.in.tested:
	$(ROOT)/bin/Zpolytest.exec < $< > xyz
	diff -w xyz $*.out

# Include the shared compilation rules
include $(ROOT)/vars.mk
include $(ROOT)/default_functions.mk
